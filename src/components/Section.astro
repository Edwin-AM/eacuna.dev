---
interface Props {
	title: string;
}

// biome-ignore lint/correctness/noUnusedVariables: <explanation>
const { title } = Astro.props as Props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
section {
  max-width: 720px;
  margin: 0 auto 48px;
}

h2 {
  font-weight: 700;
  line-height: 1.5;
  font-size: 1.5rem;
  margin-bottom: 8px;
}
</style>

