---
import { data } from "@info";

interface Props {
	title: string;
}

const { title } = Astro.props as Props;
const { image } = data;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
html {
  font-family:
    Menlo,
    Monaco,
    Lucida Console,
    "Courier New",
    Courier,
    monospace;
  background: #fff;
  letter-spacing: -0.025rem;
}

body,
figure {
  margin: 0;
  padding: 0;
}

a {
  text-decoration: none;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

/* 
* Esta regla asegura que el tamaño de los elementos 
* (y sus pseudo-elementos) sea consistente y fácil de 
* controlar, porque el ancho y alto definidos incluye
* padding y borde. 
*/
*,
*::before,
*::after {
  box-sizing: border-box;
}

h1,
h2,
h3,
h4 {
  margin: 0;
  font-family:
    -apple-system,
    system-ui,
    BlinkMacSystemFont,
    "Segoe UI",
    Roboto,
    Oxygen,
    Ubuntu,
    Cantarell,
    "Open Sans",
    "Helvetica Neue",
    sans-serif;
}

p {
  color: #666;
  font-size: 0.9rem;
  line-height: 1.5;
  margin: 0;
  text-wrap: pretty;
}

